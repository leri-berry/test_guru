<tr>
  <td><%= badge.title %></td>
  <td><%= badge.rule %></td>
  <td><%= image_tag("/assets/badges/#{badge.url}", size: "170x100") %></td>
  <td><%= link_to t('.edit'), edit_admin_badge_path(badge) %></td>
  <td>
    <%= link_to t('.delete'),
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: 'Are you sure?' }%>
  </td>
</tr>